<!doctype html>
<html amp âš¡ {{ language_attributes()|raw }}>
<head>
    <meta charset="{{ bloginfo( 'charset' )|esc_attr }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="profile" href="https://gmpg.org/xfn/11"/>
    {{ do_action('amp_wp_head') }}
</head>
<body {{ body_class('')|raw }}>
{{ do_action('amp_body_open'|generate_hook) }}
<nav class="ampstart-headerbar fixed items-center top-0 left-0 right-0 py-2 bg-gray-100">
    <button aria-label="open sidebar"
            on="tap:menu-sidebar.toggle" tabindex="0"
            class="ampstart-navbar-trigger position-absolute my-2 ml-4 btn p-0">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="block">
            <path fill="none" d="M0 0h24v24H0z"></path>
            <path fill="currentColor" d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
        </svg>
    </button>
    {{ do_action('amp_nav'|generate_hook) }}
</nav>
{% if has_nav_menu('amp-menu') %}
    <amp-sidebar id="menu-sidebar" class="sidebar w-50 position-relative p-3" layout="nodisplay" side="right">
        <div class="text-left mb-3">
            <button aria-label="close sidebar" on="tap:menu-sidebar.close"
                    tabindex="0" class="ampstart-navbar-trigger top-0 left-0 btn">
                {{ render_icon('fasm/6/set/xmark', {class: 'icon-2xs mx-auto'}, 1) }}
            </button>
        </div>

        {{ wp_nav_menu({theme_location:'amp-menu'}) }}

        <div class="text-center pt-3 border-top">
            <a class="text-gray-800" href="{{ ''|noneamp|esc_attr }}">{{ none_amp|raw }}</a>
        </div>
    </amp-sidebar>
{% endif %}
{{ do_action('amp_header_end'|generate_hook) }}

